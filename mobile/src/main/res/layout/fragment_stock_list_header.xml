<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>
		<variable
			name="view"
			type="com.example.ui.StockListView" />
		<variable
			name="data"
			type="String" />
	</data>

	<LinearLayout
		android:id="@+id/stock_list_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/global_spacing_48"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/stock_list_header_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/global_keyline_16"
			android:layout_marginRight="@dimen/global_keyline_16"
			android:textAppearance="@style/TextAppearance.Stocks.Body2"
			android:text="@{data}" />

	</LinearLayout>

</layout>
